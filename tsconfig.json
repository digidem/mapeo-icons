{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["node"]
  },
  "include": [
    "nuxt.config.*",
    "app.config.*",
    "i18n.config.*",
    "components",
    "composables",
    "layouts",
    "pages",
    "plugins",
    "server",
    "store",
    "tests",
    "types",
    "utils"
  ]
}
